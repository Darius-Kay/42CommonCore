#include "get_next_line.h"

static void	ft_trimmer(char *str)
{
	int	i;
	int	si;

	i = 0;
	si = 0;
	if (!str)
		return ;
	while (str[i] != '\n' && str[i])
		i++;
	while (str[++i])
	{
		str[si] = str[i];
		si++;
	}
	if (si != 0)
		str[si] = '\0';
}

static char	*ft_substr(char *s, int start, size_t len)
{
	size_t	i;
	size_t	s_len;
	char	*sub;

	i = 0;
	s_len = ft_slen(s);
	if (len > s_len - start)
		len = s_len - start;
	sub = (char *)malloc(sizeof(char) * (len + 1));
	if (!sub)
		return (NULL);
	while (i < len)
	{
		sub[i] = s[start + i];
		i++;
	}
	sub[i] = '\0';
	return (sub);
}

char	*get_next_line(int fd)
{
	static char	*str = NULL;
	char		*buf;
	int			len;

	if (fd < 0 || BUFFER_SIZE <= 0)
		return (NULL);
	len = 1;
	buf = (char *)malloc(sizeof(char) * (BUFFER_SIZE + 1));
	if (!buf)
		return (NULL);
	while (!ft_strchr(str) && len != 0)
	{
		len = read(fd, buf, BUFFER_SIZE);
		if (len <= 0)
		{
			free(buf);
			return (NULL);
		}
		buf[len] = '\0';
		str = ft_strjoin(str, buf);
	}
	free(buf);
	buf = ft_substr(str, 0, ft_strchr(str));
	ft_trimmer(str);
	return (buf);
}
